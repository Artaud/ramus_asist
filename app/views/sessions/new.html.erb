<% provide(:title, "Přihlášení") %> <h1>přihlášení</h1>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "přihlaš se!", class: "btn btn-large btn-primary" %>
			<% end %>

		</div>
	</div>
</div>